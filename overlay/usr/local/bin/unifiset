#!/bin/sh


enable_unifi_poller_service() {
    poller_enabled = $1

    if [ "$poller_enabled" = "true" ]
    then
        service unifi_poller start
    else
        service unifi_poller stop
    fi
}

if [ "$1" == "unifi_poller_enable" ]
then
    enable_unifi_poller_service $2
else
    echo "Unknwon option"
fi
